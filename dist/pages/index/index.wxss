.index-wrap {
  width: 100%;
  min-height: 100vh; }
.index-topbar {
  padding: 10rpx 50rpx;
  text-align: center;
  font-weight: bold; }
.index-topbar Text {
    color: #f87a03;
    font-size: 40rpx; }
.index-topbar View {
    color: #333;
    font-size: 30rpx; }
.index-list {
  padding: 50rpx; }
.index-li {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 50rpx;
  border-radius: 8rpx;
  overflow: hidden; }
.index-bg {
  width: 100%;
  height: 300rpx;
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center center;
  background-color: #f5f5f5; }
.index-info {
  padding: 15rpx; }
.index-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx; }
.index-des {
  font-size: 26rpx;
  color: #666; }